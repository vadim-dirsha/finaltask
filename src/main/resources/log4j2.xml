<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{HH:mm:ss.SSS} [%t] %-5level  %logger{36} - %msg%n" />
        </Console>

        <File name="LogFile" fileName="logs/root.log">
            <PatternLayout
                    pattern="%d{ISO8601} [%-5p] (%F:%L) - %m%n" />
        </File>

        <RollingFile name="RollingFile" fileName="logs/roll.log"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d [%t] %p %c - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="1 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>"
    </Appenders>

    <Loggers>
        <Logger name="TestLogger" level="trace" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="ConfigurationLogger" level="trace" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="ControllerLogger" level="trace" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <!-- Root Logger -->
        <Root level="trace">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>


</Configuration>